<Window x:Class="Invasion_of_gooks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Invasion_of_gooks"
        mc:Ignorable="d"
        Title="Invasion of gooks" Height="450" Width="800">
    <Canvas>
        <Label x:Name="stopwatch" Content="0 : 0 : 0" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="60" Height="30" Background="#3F0046FF" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="Start" Height="50" Width="140" Click="Start_Click" VerticalAlignment="Top" Canvas.Left="330" Canvas.Top="10" >Start</Button>
        <Button x:Name="Settings" Height="30" Width="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Canvas.Left="10" Canvas.Top="380"/>
        <Button x:Name="Exit" Height="30" Width="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Canvas.Left="752" Canvas.Top="380"/>
    </Canvas>
</Window>