<Window x:Class="Invasion_of_gooks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Invasion_of_gooks"
        mc:Ignorable="d"
        Title="Invasion of gooks: Main Menu" WindowState="Maximized" Height="768" Width="1366">
    <Canvas x:Name="can">
        <Label x:Name="stopwatch" Content="0 : 0 : 0" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top" Width="60" Height="30" Background="#3F0046FF" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="Start" Click="Start_Click" Height="50" Width="140" Canvas.Left="613" VerticalAlignment="Center" Canvas.Top="300" >Start</Button>
        <Button x:Name="Settings" Height="40" Width="40" VerticalAlignment="Bottom" HorizontalAlignment="Left" Canvas.Left="20" Canvas.Bottom="20" Click="Settings_Click"/>
        <Button x:Name="Exit" Height="40" Width="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Canvas.Right="20" Canvas.Bottom="20" Click="Exit_Click">
            <Image Source="exit_image.png" Stretch="Fill" Height="34" Width="34"/>
        </Button>
        <Expander x:Name="upgrades" Header="Upgrades" Height="210" Canvas.Left="20" Canvas.Top="355" Width="300" IsExpanded="False" Background="#FFFF8585">
            <ScrollViewer HorizontalAlignment="Left" Height="176" Width="280" Margin="10,0,0,0" Background="#FF7F8BFF"/>
        </Expander>
        <Expander x:Name="achievements" Header="Achievements" Height="210" Canvas.Left="1038" Canvas.Top="355" Width="300" IsExpanded="False" Background="#FF859BFF">
            <ScrollViewer HorizontalAlignment="Left" Height="176" Width="280" Margin="10,0,0,0" Background="#FFFF8383"/>
        </Expander>
    </Canvas>
</Window>
